<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/demo_wearable_notifications_edittext_send_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/demo_wearable_notifications_edittext_send_text"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"/>

    <Button
        android:id="@+id/demo_wearable_notifications_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_wearable_notifications_button_send"/>

    <Button
        android:id="@+id/demo_wearable_notifications_button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_wearable_notifications_button_clear"/>

</LinearLayout>